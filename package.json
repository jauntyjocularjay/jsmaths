{
    "name": "jsmaths",
    "version": "1.0.0",
    "description": "JSMaths is an extensive math library written in TypeScript for JavaScript and Node.js",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "test": "jest --config jestconfig.json",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "eslint -c .eslintrc.js --ext .ts src",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/juanm4/jsmaths.git"
    },
    "keywords": [],
    "author": "Juanma Molina <juanm4@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/juanm4/jsmaths/issues"
    },
    "homepage": "https://github.com/juanm4/jsmaths#readme",
    "devDependencies": {
        "@types/jest": "^26.0.15",
        "@typescript-eslint/eslint-plugin": "^4.6.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-jest": "^24.1.0",
        "eslint-plugin-json": "^2.1.2",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.6.3",
        "prettier": "^2.1.2",
        "prettier-eslint": "^11.0.0",
        "ts-jest": "^26.4.3",
        "typescript": "^4.0.5"
    },
    "files": [
        "lib/**/*"
    ]
}
