{
    "compilerOptions": {
        "lib": [ "es5", "es6", "es7",
            "es2015", "es2016",
            "es2017", "es2018",
            "esnext" ],
        "module": "commonjs",
        "target": "es2017",
        "removeComments": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./lib",
        "allowJs": true,
        "experimentalDecorators": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}
